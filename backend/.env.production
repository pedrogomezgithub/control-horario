# Configuración del servidor
NODE_ENV=production
PORT=10000

# Configuración de seguridad
JWT_SECRET=control_horario_production_secret_2024_render
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Zona horaria
DEFAULT_TIMEZONE=America/Mexico_City

# Configuración de CORS - Frontend desplegado en Netlify
ALLOWED_ORIGINS=https://same-yx2maar5fj8-latest.netlify.app,http://localhost:5173

# Configuración de logs
LOG_LEVEL=info
